<p id="notice"><%= notice %></p>

<h1>Scripts</h1>

<table>
  <thead>
    <tr>
      <% if current_user.has_role? :admin %>
        <th>Patient</th>
      <% end %>
      
      <th>Details</th>
      <th>Expiration</th>
      <th>Doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>

  <% if current_user.has_role? :admin %>
    <% @scripts.each do |script| %>
      <tr>
        <td><%= User.find(script.user_id).name %></td>
        <td><%= script.details %></td>
        <td><%= script.expiration %></td>
        <td><%= script.doctor %></td>
        <td><%= link_to 'Show', script %></td>
        <% if current_user.has_role? :admin %>
        <td><%= link_to 'Edit', edit_script_path(script) %></td>
        <td><%= link_to 'Destroy', script, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
    <%else%>
     <% current_user.scripts.each do |script| %>
        <tr>
          <td><%= script.details %></td>
          <td><%= script.expiration %></td>
          <td><%= script.doctor %></td>
          <td><%= link_to 'Show', script %></td>
        </tr>
      <% end %>
    <% end%>
  </tbody>
</table>

<br>

<% if current_user.has_role? :admin %>
<%= link_to 'New Script', new_script_path %>
<% end %>
