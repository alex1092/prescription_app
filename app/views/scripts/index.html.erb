<p id="notice"><%= notice %></p>

<% if current_user.has_role? :admin %>
    <h1>Scripts</h1>
  <%else%>
    <h1>Your Scripts</h1>
  <%end%>

<table>
  <thead>
    <tr>
      <% if current_user.has_role? :admin %>
        <th>Patient</th>
      <% end %>
      <th>Details</th>
      <th>Expiration</th>
      <th>Doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if current_user.has_role? :admin %>
      <%= render '/scripts/dr_index'%>
    <%else%>
      <%= render '/scripts/user_index'%>
    <% end%>
  </tbody>
</table>

<br>

<% if current_user.has_role? :admin %>
<%= link_to 'New Script', new_script_path %>
<% end %>


